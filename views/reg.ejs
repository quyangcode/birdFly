<% include header.ejs %>
<div class="container-fluid">
	<form class="form-horizontal" method="post">
		<fieldset>
		<legend>用户注册</legend>
		<% if (error) { %>
		  <div class="alert alert-error"><%= error %></div>
		<% } %>
		<div class="control-group">
			<label class="control-label" for="username">用户名</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="username" name="name" value="">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">邮箱</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="email" name="email" value="">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">请设置密码</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password" name="password" value="">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">再次输入密码</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password2" name="password2" value="">
			</div>
		</div>
		
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">注册</button>
		</div>
		</fieldset>
	</form>
</div>
<% include footer.ejs %>