<% include header.ejs %>
<div class="hero-unit">
    <h1>欢迎來到 birdFly</h1>
    <p>birdFly 是一个微博系統，你可以在上面关注你的偶像，关注最新的消息，查看好友的近况，同时也可以向周围好友展示自己的生活</p>
    <p>
      <a class="btn btn-primary btn-large" href="/login">立即登录</a>
      <a class="btn btn-large" href="/reg">立即注册</a>
    </p>
  </div>
  <% posts.forEach(function(post, index) {
        if (index % 3 == 0) { %>
          <div class="row">
        <%} %>
        <div class="span4">
          <h2><a href="/post/user/<%= post.name %>"><%= post.name %></a> 说</h2>
          <p><%= post.post %></p>
        </div>
        <% if (index % 3 == 2) { %>
          </div>
        <% } %>
  <%}) %>

<% include footer.ejs %>